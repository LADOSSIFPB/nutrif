<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.nutrif">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".view.NutrifApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activitys.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activitys.StartActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".view.activitys.RefeitorioActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activitys.CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".view.activitys.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activitys.LoginActivity" />
        </activity>
        <activity
            android:name=".view.activitys.ConfirmationActivity"
            android:label="@string/confirmacao"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".view.activitys.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activitys.LoginActivity" />
        </activity>
        <activity
            android:name=".view.activitys.RefeicaoActivity"
            android:label="@string/title_activity_refeicao"
            android:parentActivityName=".view.activitys.RefeitorioActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activitys.RefeitorioActivity" />
        </activity>
    </application>

</manifest>
