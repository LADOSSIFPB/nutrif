<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-configuration>
	<session-factory>

		<property name="connection.url">jdbc:mysql://localhost:3306/nutrif_homologacao</property>
		<property name="connection.username">root</property>
		<property name="connection.password">ifpbinfo</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hbm2ddl.auto">update</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="current_session_context_class">thread</property>

		<!-- Produção -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property> 
		<property name="c3p0.maxStatements">5</property>
		<property name="c3p0.maxIdleTime">10</property>
		<property name="c3p0.numHelperThreads">3</property>
		<property name="c3p0.testConnectionOnCheckout">true</property>
		<property name="c3p0.preferredTestQuery">SELECT 1</property>
		<property name="c3p0.initialPoolSize">1</property>
		<property name="c3p0.minPoolSize">1</property>
		<property name="c3p0.maxPoolSize">1</property>
		<property name="c3p0.acquireIncrement">1</property>
		<property name="c3p0.idleConnectionTestPeriod">1</property>
		<property name="c3p0.maxAdministrativeTaskTime">1</property>
		
		
		<!-- Entidades -->
		<mapping class="br.edu.ladoss.entity.Pessoa" />
		<mapping class="br.edu.ladoss.entity.Aluno" />
		<mapping class="br.edu.ladoss.entity.Funcionario" />
		<mapping class="br.edu.ladoss.entity.Curso" />
		<mapping class="br.edu.ladoss.entity.Dia" />
		<mapping class="br.edu.ladoss.entity.Refeicao" />
		<mapping class="br.edu.ladoss.entity.DiaRefeicao" />
		<mapping class="br.edu.ladoss.entity.RefeicaoRealizada" />
		<mapping class="br.edu.ladoss.entity.ConfirmaRefeicaoDia" />
		<mapping class="br.edu.ladoss.entity.PretensaoRefeicao" />
		<mapping class="br.edu.ladoss.entity.Role" />
		<mapping class="br.edu.ladoss.entity.Arquivo" />
		<mapping class="br.edu.ladoss.entity.Login" />						

	</session-factory>
</hibernate-configuration>